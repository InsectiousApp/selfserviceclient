<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context="com.selfservice.codev.aaaselfservice.UserPreferenceActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        />

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_gravity="center"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        card_view:cardUseCompatPadding="true"
        android:translationZ="2dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="3dp"
        >

   <LinearLayout
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:padding="5dp"

       android:layout_gravity="center"
       android:orientation="horizontal"
       android:background="@color/bluelight"
       >

       <TextView
           android:layout_width="0dp"
           android:layout_height="fill_parent"
           android:layout_weight="0.2"
           />


       <TextView
           android:layout_width="0dp"
           android:layout_weight="1.5"
           android:gravity="center_horizontal|bottom"
           android:paddingBottom="10dp"
           android:text="Enter your city"
           android:textSize="20sp"
           android:textColor="#fff"
           android:fontFamily="sans-serif-light"
           android:layout_height="fill_parent" />

       <EditText
           android:layout_width="0dp"
           android:layout_height="fill_parent"
           android:layout_weight="1"
           android:gravity="bottom"
           android:id="@+id/userpreferenceactivity_et_city"
           android:textColor="#fff"
           />

       <TextView
           android:layout_width="0dp"
           android:layout_height="fill_parent"
           android:layout_weight="0.2"
           />

   </LinearLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        />

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_gravity="center"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        card_view:cardUseCompatPadding="true"
        android:translationZ="2dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="3dp"
        >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="5dp"

        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="@color/bluelight"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.2"
            />


        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:text="Choose a brand"
            android:textSize="20sp"
            android:textColor="#fff"
            android:fontFamily="sans-serif-light"
            android:layout_height="fill_parent" />

        <Spinner
            android:id="@+id/userpreferenceactivity_spinner_brand"
            android:layout_width="0dp"
            android:gravity="bottom"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.2"
            />


    </LinearLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        />

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_gravity="center"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        card_view:cardUseCompatPadding="true"
        android:translationZ="2dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="3dp"
        >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="5dp"

        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="@color/bluelight"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.2"
            />


        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:text="Choose milage range"
            android:textSize="20sp"
            android:textColor="#fff"
            android:fontFamily="sans-serif-light"
            android:layout_height="fill_parent" />

        <Spinner
            android:id="@+id/userpreferenceactivity_spinner_milage"
            android:layout_width="0dp"
            android:gravity="bottom"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.2"
            />


    </LinearLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        />

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_gravity="center"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        card_view:cardUseCompatPadding="true"
        android:translationZ="2dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="3dp"
        >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="5dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="@color/bluelight"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.2"
            />


        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:text="Select a style"
            android:textSize="20sp"

            android:textColor="#fff"
            android:fontFamily="sans-serif-light"
            android:layout_height="fill_parent" />

        <Spinner
            android:id="@+id/userpreferenceactivity_spinner_style"
            android:layout_width="0dp"
            android:gravity="bottom"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.2"
            />


    </LinearLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/userpreferenceactivity_btn_getproductlist"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:layout_width="200dp"
        fancy:fb_borderColor="#FFFFFF"
        fancy:fb_borderWidth="2dp"
        fancy:fb_defaultColor="@color/bluelight"
        fancy:fb_focusColor="@color/bluelightdark"
        android:fontFamily="sans-serif-light"
        fancy:fb_iconPosition="left"
        fancy:fb_radius="30dp"
        android:gravity="center"
        fancy:fb_text="Get Products"
        fancy:fb_textColor="#FFFFFF"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        />

</LinearLayout>
