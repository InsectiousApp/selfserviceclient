<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.codev.myapplication.BikeListActivity">

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/filteredproductlistactivity_ll_searchpart"
        android:layout_height="0dp"
        android:layout_weight="1.8"
        card_view:cardUseCompatPadding="true"
        android:translationZ="2dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="3dp"
        >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="visible"
        android:orientation="vertical"

        >

       <LinearLayout
           android:layout_width="fill_parent"
           android:layout_height="0dp"
           android:layout_weight="0.8"
           android:orientation="horizontal"
           >

           <Spinner
               android:id="@+id/filteredproductlistactivity_spinner_city"
               android:layout_width="0dp"
               android:gravity="center"
               android:layout_weight="1"
               android:layout_height="fill_parent"
               />

           <Spinner
               android:id="@+id/filteredproductlistactivity_spinner_brand"
               android:layout_width="0dp"
               android:gravity="center"
               android:layout_weight="1"
               android:layout_height="fill_parent"
               />

       </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <Spinner
                android:id="@+id/filteredproductlistactivity_spinner_milage"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                />

            <Spinner
                android:id="@+id/filteredproductlistactivity_spinner_style"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                />


        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/filteredproductlistactivity_btn_serachproducts"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:layout_width="fill_parent"
            fancy:fb_borderColor="#FFFFFF"
            fancy:fb_borderWidth="0dp"
            fancy:fb_defaultColor="@color/bluelight"
            fancy:fb_focusColor="@color/bluelightdark"
            android:fontFamily="sans-serif-light"
            fancy:fb_iconPosition="left"
            fancy:fb_radius="3dp"
            android:gravity="center"
            fancy:fb_text="Search Products"
            fancy:fb_textColor="#FFFFFF"
            android:layout_gravity="center" />

    </LinearLayout>

    </android.support.v7.widget.CardView>

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:divider="#ffffff"
        android:id="@+id/filteredproductlistactivity_lv_bikelist"

        >


    </ListView>

</LinearLayout>
